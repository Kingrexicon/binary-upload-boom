<%- include('partials/header') -%>
  <section class="w-3/  sm:w-full bg-gray-900 mx-auto p-6 bg-gray-900  shadow-md">
    <div class="flex  flex-col md:flex-row gap-6">
      <!-- Profile Section -->
      <div class="flex flex-col  items-center md:items-start md:w-1/3 bg-white p-4 rounded-lg shadow-sm">
        <h2 class="text-xl font-semibold">
          <%= user.userName %>
        </h2>
        <p class="text-gray-600">
          <%= user.email %>
        </p>
        <p class="bg-red-300 text-black px-5  rounded-sm hover:bg-red-700 transition"><a href="/logout">Logout</a></p>
        <p class="bg-blue-600 text-white px-5 rounded-sm hover:bg-blue-700 transition"><a class="" href="/feed">Return to Feed</a></p>
      </div>

      <!-- Add a Post Section -->
      <div class="md:w-2/3 bg-white p-4 rounded-lg shadow-sm">
        <h3 class="text-lg font-semibold mb-4">Add a Post</h3>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">


          <input type="text"
            class="block w-full rounded-md border border-gray-300 placeholder:text-gray-500 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm/6"
            id="title" name="title" placeholder="Title">



          <textarea
            class="w-full border border-gray-300 rounded-md p-2 resize-none focus:outline-none focus:ring-2 focus:ring-blue-400"
            id="caption" name="caption" rows="5" placeholder="caption"></textarea>

          <div class="mb-3">
            <label for="imageUpload"
              class="flex justify-center w-full h-32 px-4 transition bg-white border-2 border-gray-300 border-dashed rounded-md appearance-none cursor-pointer hover:border-gray-400 focus:outline-none"
              id="drop-area">
              <div class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24"
                  stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                <span class="font-medium text-gray-600">
                  Drop your image here or <span class="text-blue-600">browse</span>
                </span>
              </div>
              <input type="file" name="file_upload" class="hidden" accept="image/*" />
            </label>
            <input type="file" class="" id="imageUpload" name="file">
          </div>
          <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition"
            value="Upload">Submit</button>

        </form>
      </div>
      <div class="md:w-2/3 bg-white p-4 rounded-lg shadow-sm">
        <h3 class="text-lg font-semibold mb-4">Your feeds</h3>
        <ul class="w-full flex flex-wrap">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="w-2/4 ">
              <a href="/post/<%= posts[i]._id%>" class="">
                <img class="h-full w-full object-scale-down" src="<%= posts[i].image%>">
              </a>
            </li>
            <% } %>
        </ul>
      </div>
    </div>
  </section>

  <%- include('partials/footer') -%>