<%- include('partials/header') -%>
  <section class="w-3/4 mx-auto p-6 bg-gray-50 rounded-lg shadow-md">
    <div class="flex flex-col md:flex-row gap-6">
      <!-- Profile Section -->
      <div class="flex flex-col items-center md:items-start md:w-1/3 bg-white p-4 rounded-lg shadow-sm">
        <h2 class="text-xl font-semibold">
          <%= user.userName %>
        </h2>
        <p class="text-gray-600">
          <%= user.email %>
        </p>
        <p class="text-gray-500 text-sm mt-2"><a href="/logout">Logout</a></p>
        <p class="text-gray-500 text-sm mt-2"><a class="" href="/feed">Return to Feed</a></p>
      </div>

      <!-- Add a Post Section -->
      <div class="md:w-2/3 bg-white p-4 rounded-lg shadow-sm">
        <h3 class="text-lg font-semibold mb-4">Add a Post</h3>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">
         
          
            <input type="text" class="form-control" id="title" name="title" placeholder="Title">
        
          
            
            <textarea class="w-full border border-gray-300 rounded-md p-2 resize-none focus:outline-none focus:ring-2 focus:ring-blue-400" id="caption" name="caption" rows="5" placeholder="caption"></textarea>
        
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition" value="Upload">Submit</button>
          <div class="mt-4 text-right">
            <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition">
              Post
            </button>
          </div>
        </form>

        <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id%>">
                <img class="w-24 h-24 object-cover mb-4" src="<%= posts[i].image%>">
              </a>
            </li>
            <% } %>
        </ul>
      </div>
    </div>
  </section>

  <%- include('partials/footer') -%>