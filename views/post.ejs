<%- include('partials/header') -%>

  <div
    class="w-full rounded overflow-hidden shadow-lg bg-gray-900 mx-auto h-full lg:h-screen">
    <div class=" w-full p-2 flex place-content-between">
      <a class="bg-yellow-500 text-black px-5  rounded-sm hover:bg-green-700 transition" href="/profile">Return to
        Profile</a>
      <a class="bg-yellow-500 text-black px-5  rounded-sm hover:bg-green-700 transition" href="/feed">Return to feed</a>
    </div>

    <div class="flex flex-col lg:h-dvh h-9/10 lg:flex-row ">

      <img class="w-full h-full basis-1/3 object-scale-down" src="<%= post.image%>" alt="Card Image">
      <div class="basis-2/3">
        <div class="px-6 py-4">
          @<%= user.userName%> %>
            <div class="font-bold text-xl mb-2">
              <%= post.title %>
            </div>
            <p class="text-gray-700 text-base">
              <%= post.caption %>
            </p>
        </div>
        <div class="px-6 pt-4 pb-2 flex   place-content-between">

          <form class="" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded fa fa-heart"
              type="submit"></button>
            <h3 class="col-3">Likes: <%= post.likes %>
            </h3>
          </form>

          <%if(post.user==user.id){ %>
            <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="">
              <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded fa fa-trash"
                type="submit"></button>
            </form>
            <%}%>

        </div>
        <!-- Comments Section -->
        <div class="px-6 py-4 border-t border-gray-200">
          <h3 class="font-semibold text-lg mb-2">Comments</h3>
          <div class="space-y-2 max-h-40 overflow-y-auto">
            <ul>
              <% for(var i=0; i<comments.length; i++) {%>
                <li class="text-gray-600 text-sm">
                  <%= comments[i].comment%>
                </li>
                <%}%>
            </ul>


          </div>
          <form action="/comment/createComment/<%= post._id%>" method="POST">
            <div class="mb-3">
              <input type="text" class="w-full mt-3 p-2 border rounded resize-none text-sm" rows="3"
                placeholder="Add a comment..." id="comment" name="comment">
            </div>

            <button type="submit" class="bg-blue-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"
              value="Upload">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  </body>
  <%- include('partials/footer') -%>